#include <stdio.h>
#include <dirent.h>

int main()
{
  DIR *prueba;
  struct dirent *entrada;
  int archivos = 0;
  
  prueba = opendir(".");
  if(prueba == NULL)
    {
      perror("No se puede abrir el directorio");
      return(1);
    }
  while ((entrada=readdir(prueba)))
    {
      archivos++;
      printf("Archivo %3d: %s\n", archivos, entrada->d_name);
    }
  closedir(prueba);

  return (0);
}
